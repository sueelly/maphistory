<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/info_window"
        android:layout_width="302dp"
        android:layout_height="222dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="54dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info_window" />

    <ImageView
        android:id="@+id/btn_newhistory"
        android:layout_width="107dp"
        android:layout_height="42dp"
        android:layout_marginEnd="-285dp"
        android:layout_marginBottom="-170dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/info_window"
        app:layout_constraintEnd_toStartOf="@+id/info_window"
        app:srcCompat="@drawable/btn_new_history" />

</androidx.constraintlayout.widget.ConstraintLayout>